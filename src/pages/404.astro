---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="页面不存在 - fursuit吧·档案馆与时间机器：为了无法忘却的往事">
  <main class="flex items-center justify-center min-h-[calc(100vh-4rem)] px-6">
    <div class="text-center">
      <div class="mb-8">
        <h1 class="text-5xl text-gray-400 select-none">页面不存在</h1>
      </div>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <button
          onclick="history.back()"
          class="bg-gray-200 hover:bg-gray-300 active:bg-gray-400 text-gray-700 px-4 py-2 rounded transition-colors cursor-pointer">返回上一页</button
        >
        <a href="/" class="bg-blue-700 hover:bg-blue-600 active:bg-blue-800 text-white px-4 py-2 rounded transition-colors">首页</a>
      </div>
    </div>
  </main>
</BaseLayout>
